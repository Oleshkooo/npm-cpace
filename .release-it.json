{
    "git": {
        "commitMessage": "release ${version}",
        "tagName": "v${version}"
    },
    "npm": {
        "publish": true
    },
    "github": {
        "release": true,
        "tokenRef": "GITHUB_TOKEN"
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": "angular",
            "infile": "CHANGELOG.md"
        }
    }
}
